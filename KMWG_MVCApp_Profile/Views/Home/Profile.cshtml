
@model KMWG_MVCApp_Profile.DB_1.User
@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>
@using (Html.BeginForm("Profile","Home",FormMethod.Post, new { enctype="multipart/form-data" }))
{




<div class="box box-body">
    @Html.HiddenFor(model => model.Id, new { @class = "form-control" })
    @if (Model.Photo!=null&& Model.Photo.Length>0)
    {
    <div class="form-group">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Photo)" alt="Profil Resmi" />
        </div>

    </div>
    }
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BDate, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BDate, new { @htmlAttributes = new { @class = "form-control" } })
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Kilo, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Kilo, new { @htmlAttributes = new { @class = "form-control" } })
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
        </div>

    </div>
    <div class="form-group">
        @Html.Label("lblGender", "Gender", new { @class = "control-label col-md-2" })
        @*@Html.LabelFor(model => model.Cinsiyet, new { @class = "control-label col-md-2" }) Bunu sor*@
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Cinsiyet, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @readonly = "readonly" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Addresses, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ListBoxFor(model => model.Addresses, Model.Addresses.Select(x => new SelectListItem() {

           Text = x.Address,
           Value = x.Id.ToString(),
     }), new { @class = "form-control", @readonly = "readonly" })
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UserGroup, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.UserGroupId, (List<SelectListItem>)ViewBag.KullaniciGruplari, new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        @Html.Label("lblPhoto","Profile Photo", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="uploadPhoto" value="" class="form-control" />

        </div>
    </div>

</div>
    <div class="box box-footer">
        <button type="submit" class="btn btn-default">
            Update
        </button>

    </div>
  
}
